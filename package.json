{
  "name": "amplify-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "next start",
    "test": "npm-run-all lint:* test:*",
    "test:unit": "cross-env TS_NODE_PROJECT=tsconfig/tsconfig.ava.json ava",
    "lint": "npm-run-all lint:*",
    "lint:tsc": "tsc --noEmit",
    "lint:lint": "xo --fix",
    "lint:style": "stylelint src/styles/**/*.scss",
    "dev": "cross-env ENV=local next -p 4000",
    "build:files": "next build",
    "build:export": "next export",
    "build": "npm-run-all build:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kolyaventuri/amplify-template.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kolyaventuri/amplify-template/issues"
  },
  "homepage": "https://github.com/kolyaventuri/amplify-template#readme",
  "lint-staged": {
    "**/*.ts?(x)": [
      "tsc --noEmit",
      "xo --fix"
    ],
    "**/*.scss": [
      "stylelint"
    ]
  },
  "xo": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "extends": [
      "xo-typescript",
      "plugin:@typescript-eslint/recommended",
      "xo-react/space"
    ],
    "extensions": [
      "ts"
    ],
    "space": true,
    "prettier": true,
    "compilerOptions": {
      "strict": true
    },
    "rules": {
      "@typescript-eslint/camelcase": 0,
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "memberLike",
          "modifiers": [
            "private"
          ],
          "format": [
            "camelCase"
          ],
          "leadingUnderscore": "requireDouble"
        }
      ],
      "indent": 0,
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "@typescript-eslint/prefer-readonly-parameter-types": 0
    },
    "overrides": [
      {
        "files": "test/**/*.ts?(x)",
        "rules": {
          "@typescript-eslint/explicit-function-return-type": 0,
          "@typescript-eslint/prefer-readonly-parameter-types": 0,
          "@typescript-eslint/no-unsafe-call": 0,
          "@typescript-eslint/no-unsafe-assignmen": 0,
          "@typescript-eslint/no-unsafe-member-access": 0,
          "@typescript-eslint/no-unsafe-return": 0,
          "@typescript-eslint/no-unsafe-assignment": 0
        }
      },
      {
        "files": "src/**/*.ts?(x)",
        "rules": {
          "import/no-unassigned-import": 0
        }
      },
      {
        "files": "**/*.d.ts",
        "rules": {
          "@typescript-eslint/no-unused-vars": 0,
          "@typescript-eslint/triple-slash-reference": 0
        }
      }
    ],
    "settings": {
      "react": {
        "version": "16.5"
      }
    },
    "env": [
      "node"
    ],
    "include": [
      "**/*.ts?(x)"
    ],
    "ignore": [
      "**/*.js"
    ]
  },
  "ava": {
    "babel": {
      "compileEnhancements": false,
      "compileAsTests": [
        "test/helpers/**/*.ts"
      ]
    },
    "extensions": [
      "ts",
      "tsx"
    ],
    "files": [
      "test/**/*.test.ts?(x)"
    ],
    "require": [
      "ignore-styles",
      "esm",
      "ts-node/register",
      "tsconfig-paths/register",
      "./test/helpers/setup-enzyme.ts"
    ]
  },
  "dependencies": {
    "next": "^11.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@ava/babel": "^2.0.0",
    "@types/react": "^17.0.27",
    "@types/sinon": "^10.0.4",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "ava": "^3.15.0",
    "browser-env": "^3.3.0",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.32.0",
    "eslint-config-xo": "^0.39.0",
    "eslint-config-xo-react": "^0.25.0",
    "eslint-config-xo-typescript": "^0.45.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "esm": "^3.2.25",
    "husky": "^7.0.2",
    "ignore-styles": "^5.0.1",
    "lint-staged": "^11.1.2",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "proxyquire": "^2.1.3",
    "sinon": "^11.1.2",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-scss": "^3.21.0",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.3",
    "xo": "^0.45.0"
  }
}
